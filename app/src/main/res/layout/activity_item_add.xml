<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ItemAddActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_new"
            android:src="@drawable/images"
            android:layout_gravity="center"
            style="@style/marginTheme"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <Button
            android:id="@+id/btnPhotoAdd"
            android:background="@drawable/border"
            android:textColor="@color/colorOrange"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Resim Ekle"/>
        <EditText
            android:id="@+id/ed_konu"
            style="@style/marginTheme"
            android:textColor="@color/colorOrangeDark"
            android:hint="Konu Yazınız"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnEkle"
            style="@style/button"
            android:text="Menüye Ekle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>